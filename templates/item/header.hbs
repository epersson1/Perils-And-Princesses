<header class='sheet-header'>
  <img
    class='profile-img'
    src='{{item.img}}'
    data-edit='img'
    data-action='onEditImage'
    title='{{item.name}}'
  />
  <div class='header-fields'>
    <div class='document-name'>
      <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
      {{#if (eq item.type 'feature')}}
        <div class="">
            <label for="system.innate" class="resource-label">
              {{localize 'Innate'}}
            </label>
            <input type="checkbox" name="system.innate" {{checked system.innate}} />
          </div>
      {{/if}}
    </div>
    {{! You may prefer to have a separate header file instead of this if statement}}
    {{#if (eq item.type 'gear')}}
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>{{localize 'PNP.Item.Gear.FIELDS.quantity.label'}}</label>
          <input
            type='text'
            name='system.quantity'
            value='{{system.quantity}}'
            data-dtype='Number'
          />
        </div>
        <div class='resource'>
          <label class='resource-label'>{{localize 'PNP.Item.Gear.FIELDS.weight.label'}}</label>
          <input
            type='text'
            name='system.weight'
            value='{{system.weight}}'
            data-dtype='Number'
          />
        </div>
      </div>
    {{/if}}
    {{#if (eq item.type 'weapon')}}
      <div class='resource'>
        <label class='resource-label'>{{localize 'PNP.Item.Gear.FIELDS.weight.label'}}</label>
        <input
          type='text'
          name='system.weight'
          value='{{system.weight}}'
          data-dtype='Number'
        />
      </div>
    {{/if}}
  </div>
</header>